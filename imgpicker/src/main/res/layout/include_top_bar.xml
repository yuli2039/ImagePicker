<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bar_height"
    android:background="@color/top_bar_color"
    android:clickable="true">

    <ImageView
        android:id="@id/btnBack"
        android:layout_width="@dimen/bar_height"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/selector_back_press"
        android:padding="@dimen/m14"
        android:src="@mipmap/ic_back" />

    <View
        android:layout_width="@dimen/common_divider"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/m12"
        android:layout_marginTop="@dimen/m12"
        android:layout_toEndOf="@id/btnBack"
        android:layout_toRightOf="@id/btnBack"
        android:background="@color/divider_color" />

    <TextView
        android:id="@id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/m8"
        android:layout_marginStart="@dimen/m8"
        android:layout_toEndOf="@id/btnBack"
        android:layout_toRightOf="@id/btnBack"
        android:text="@string/top_bar_des"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <ImageView
        android:id="@id/btnDel"
        android:layout_width="@dimen/bar_height"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_back_press"
        android:padding="@dimen/m14"
        android:src="@mipmap/ic_del"
        android:visibility="gone" />

    <Button
        android:id="@id/btnOk"
        android:layout_width="84dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/m8"
        android:layout_marginEnd="@dimen/m16"
        android:layout_marginRight="@dimen/m16"
        android:layout_marginTop="@dimen/m8"
        android:background="@drawable/selector_btn_ok"
        android:text="@string/top_bar_ok"
        android:textColor="@android:color/white"
        android:textSize="@dimen/f4" />

</RelativeLayout>